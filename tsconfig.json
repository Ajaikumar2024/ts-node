{
  "$schema": "./tsconfig.schemastore-schema.json",
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "mocha"],
    "stripInternal": true,
    "baseUrl": "src",
    "paths": {
      // "*": ["generated/*", "bundled/*"],
      "/what-*": ["generated/*", "bundled/*"],
      "/*-what": ["generated/*", "bundled/*"]
    },
    "rootDirs": [
      "src",
      "generated/src"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
