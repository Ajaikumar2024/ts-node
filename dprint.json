{
  "incremental": true,
  "typescript": {
    "quoteStyle": "preferSingle",
    "indentWidth": 2,
    "lineWidth": 80,
    "operatorPosition": "maintain",
    "arguments.trailingCommas": "never",
    "parameters.trailingCommas": "never",
    "useBraces": "maintain"
  },
  "includes": [
    "/src/**",
    "/*.{js,mjs}",
    "/esm",
    "/register",
    "/scripts",
    "/src",
    "/tests"
  ],
  "excludes": [
    "/website",
    "/raw",
    "/dist-raw",
    "/**/node_modules",
    "/**/*-lock.json",
    "/tests/main-realpath/symlink/tsconfig.json",
    "/tests/throw error.ts",
    "/tests/throw error react tsx.tsx",
    "/tests/esm/throw error.ts"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.55.0.wasm"
  ]
}
